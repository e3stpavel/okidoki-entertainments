{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "theme": ["theme.config.ts"],
      "@composables/*": ["src/composables/*"],
      "@components/*": ["src/components/*"],
      "@features/*": ["src/features/*"],
      "@assets/*": ["assets/*"]
    },
    "module": "esnext"
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
